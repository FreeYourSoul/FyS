namespace fys.fb;

enum Targeting : byte {
	SELF = 0,
	ENNEMY = 1,
	ALLY = 2,
	ENNEMIES = 3,
	ALLIES = 4,
	ALLY_AND_ENNEMY = 5,
	ALLY_OR_ENNEMY = 6,
	SIDE = 7
}

enum TypeAction : byte {
    READINESS = 0,
    FIGHT = 1,
    INFO = 2
}

/// Used by the client to do an action
table ArenaFightAction {
    ac
    memberId:uint;
    actionId:string(required);
    targetType:Targeting;
    targetId:[uint];
}

root_type ArenaFightAction;